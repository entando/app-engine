<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
           http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="20231212000000_group_code_size" author="entando">
        
        <dropIndex indexName="actionlogrelations_refgroup_idx" 
                   tableName="actionlogrelations"/> 
        
        <dropForeignKeyConstraint baseTableName="authusergrouprole"  
            constraintName="authusergrouprole_grn_fkey"/>  
        
        <dropForeignKeyConstraint baseTableName="apicatalog_services"  
            constraintName="apicatalog_services_gr_fkey"/>
        
        <modifyDataType
            tableName="authgroups" columnName="groupname"
            newDataType="varchar(50)" />
        
        <modifyDataType
            tableName="authgroups" columnName="descr"
            newDataType="varchar(100)" />
        
        <modifyDataType
            tableName="authusergrouprole" columnName="groupname"
            newDataType="varchar(50)" />
        
        <modifyDataType
            tableName="apicatalog_services" columnName="requiredgroup"
            newDataType="varchar(50)" />
        
        <modifyDataType
            tableName="actionlogrelations" columnName="refgroup"
            newDataType="varchar(50)" />
        
        <addForeignKeyConstraint constraintName="authusergrouprole_grn_fkey"
                baseColumnNames="groupname"
                baseTableName="authusergrouprole"
                referencedColumnNames="groupname"
                referencedTableName="authgroups" />
        
        <addForeignKeyConstraint constraintName="apicatalog_services_gr_fkey"
                baseColumnNames="requiredgroup"
                baseTableName="apicatalog_services"
                referencedColumnNames="groupname"
                referencedTableName="authgroups" />
        
        <createIndex tableName="actionlogrelations" indexName="actionlogrelations_refgroup_idx">
            <column name="refgroup" />
        </createIndex>
        
    </changeSet>
    
</databaseChangeLog>
